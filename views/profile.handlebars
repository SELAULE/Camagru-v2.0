
<head>
	<style>
        img {
            display: inline;
            border-radius: 5%;
            width: 30vh;
            height: 31%;
        }
        .container {
  position: relative;
  width: 50%;
}

/* Make the image responsive */
.container img {
  width: 100%;
  height: auto;
}

/* Style the button and place it in the middle of the container/image */
.container .btn {
  position: absolute;
  top: 100%;
  left: 70%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  background-color: transparent;
  color: white;
  font-size: 16px;
  padding: 12px 24px;
  border: none;
  cursor: pointer;
  border-radius: 5px;
}
    </style>
</head>
{{#each images}}
    <div class="display_images">
        <img src="{{this}}" alt="myImages">
        <button class="btn"><span><i class="fas fa-comments"></i></span></button>
        <button class="btn"><span><i class="fas fa-thumbs-up"></i></span></button>
    </div>
{{/each}}